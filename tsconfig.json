{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["pages/components/*"],
      "@pages/*": ["pages/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
